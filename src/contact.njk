  <!-- minimal form cosmetics without touching your main stylesheet -->
  <style>
    .form-card input, .form-card textarea {
      width:100%; padding:12px 14px; border-radius:10px;
      border:1px solid rgba(255,255,255,.12); background:rgba(255,255,255,.04); color:var(--text);
    }
    [data-theme="light"] .form-card input, [data-theme="light"] .form-card textarea {
      background:#fff; border:1px solid rgba(0,0,0,.12); color:var(--text);
    }
    .form-card label { display:block; margin:8px 0 6px; font-weight:600; }
