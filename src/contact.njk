  <!-- Content -->
  <section class="section">
    <div class="container">
      <h1 class="section-title">Get in Touch</h1>
      <div class="grid">
        <article class="card form-card">
          <div class="card-body">
            <h3>Send a message</h3>
            <!-- Mailto fallback form (opens your mail client). 
                 Later you can swap action to Formspree/Netlify if you want serverless submissions. -->
            <form onsubmit="
              const s=encodeURIComponent(this.subject.value||'Message from website');
              const b=encodeURIComponent(this.message.value+'\n\nFrom: '+(this.name.value||'')+' <'+(this.email.value||'')+'>');
              window.location.href='mailto:contact@rowlandrestorations.com?subject='+s+'&body='+b;
              return false;">
              <label for="name">Name</label>
              <input id="name" name="name" type="text" placeholder="Your name" />

              <label for="email">Email</label>
              <input id="email" name="email" type="email" placeholder="you@example.com" />

              <label for="subject">Subject</label>
              <input id="subject" name="subject" type="text" placeholder="Whatâ€™s this about?" />

              <label for="message">Message</label>
              <textarea id="message" name="message" rows="5" placeholder="How can I help?"></textarea>

              <div class="form-actions">
                <button class="btn btn-primary" type="submit">Send Email</button>
                <a class="btn btn-ghost" href="mailto:contact@rowlandrestorations.com">Open in Email App</a>
              </div>
            </form>
          </div>
        </article>

        <article class="card">
          <div class="card-body">
            <h3>Elsewhere</h3>
            <p><strong>Email:</strong> <a href="mailto:contact@rowlandrestorations.com">contact@rowlandrestorations.com</a></p>
            <p><strong>YouTube:</strong> <a target="_blank" href="https://www.youtube.com/@RowlandRestorations">@RowlandRestorations</a></p>
            <p><strong>GitHub:</strong> <a target="_blank" href="https://github.com/drowland341">drowland341</a></p>
          </div>
        </article>
      </div>
    </div>
  </section>

